{
  "scripts": {
    "clean": "rimraf dist",
    "precommit": "lint-staged",
    "start": "pm2-docker dist/bin/www",
    "start-dev":
      "pm2-dev dist/bin/www & webpack --watch --progress --colors --config webpack.config.js",
    "build": "webpack -p --progress --colors --config webpack.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  }
}
